
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using WebDecor.DATA.EF

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
                    <span>Thanh toán</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h6 class="coupon__link">
                    <span class="fas fa-exclamation"></span> Vui lòng cập nhật đầy đủ thông tin cá nhân trước khi tiến hành thanh toán!
                </h6>
            </div>
        </div>
        @{
            UserAccount User = (UserAccount)Session["account"];
        }
        <form action="@Url.Action("Order", "Order")" method="post" class="checkout__form">
            <div class="row">
                @using (Html.BeginForm())
                {

                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <div class="col-lg-8">
                        <h5>Thông tin</h5>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Tên người nhận: <span>*</span></p>
                                    <input required value="@User.FirstName @User.LastName" type="text" name="UserName">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Địa chỉ: <span>*</span></p>
                                    <input required value="@User.Diachi" type="text" name="Address">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="checkout__form__input">
                                    <p>Số điện thoại: <span>*</span></p>
                                    <input required value="@User.Phone" type="text" name="Phone">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Email: <span>*</span></p>
                                    <input required value="@User.Email" type="email" name="Email">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="checkout__form__input">
                                    <p>Ghi chú cho đơn hàng:</p>
                                    <input type="text" name="Note">
                                </div>
                            </div>
                            <div>
                                <input type="submit" class="site-btn" value="Đặt hàng" />
                            </div>
                        </div>
                    </div>
                }
                <div class="col-lg-4">
                    <div class="checkout__order">
                        <h5>Đơn hàng</h5>
                        <div class="checkout__order__product">
                            <ul>
                                <li>
                                    <span class="top__text">Sản phẩm</span>
                                    <span class="top__text__right">Thành tiền</span>
                                </li>
                                @foreach (var item in Model)
                                {
                                    <li>
                                        - @item.Product.ProductName<b> (x@(item.SL))</b>
                                        <span>
                                            <script>
                                            var price = new Number(@(item.Price*item.SL));
                                            var myObj = {
                                                style: "currency",
                                                currency: "VND"
                                            }

                                            document.write(price.toLocaleString("vi-VN", myObj));
                                            </script>
                                        </span>
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="checkout__order__total">
                            <ul>
                                <li>
                                    Tổng phụ
                                    <span>
                                        <script>
                                        var price = new Number(@ViewBag.TongTienTP);
                                            var myObj = {
                                                style: "currency",
                                                currency: "VND"
                                            }
                                        document.write(price.toLocaleString("vi-VN", myObj));
                                        </script>
                                    </span>
                                </li>
                                <li>
                                    Tổng tiền
                                    <span>
                                        <script>
                                        var price = new Number(@ViewBag.TongTien);
                                            var myObj = {
                                                style: "currency",
                                                currency: "VND"
                                            }
                                        document.write(price.toLocaleString("vi-VN", myObj));
                                        </script>
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
<!-- Checkout Section End -->


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a>
                    <span>Contact</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5>Thông tin liên hệ</h5>
                        <ul>
                            <li>
                                <h6><i class="fa fa-map-marker"></i> Địa chỉ</h6>
                                <p>79 Buon Ju, xã Eatu TP Buôn Ma Thuột</p>
                            </li>
                            <li>
                                <h6><i class="fa fa-phone"></i> Điện thoại</h6>
                                <p><span>034.5071.246</span><span>091.556.1837</span></p>
                            </li>
                            <li>
                                <h6><i class="fa fa-headphones"></i> Email</h6>
                                <p>hoangtunglamltd@gmail.com</p>
                            </li>
                        </ul>
                    </div>
                    <div class="contact__form">
                        <h5>Gửi mail</h5>
                        <form action="#">
                            <input required type="text" id="txtName" placeholder="Tên">
                            <input required type="text" id="txtEmail" placeholder="Email">
                            <input required type="text" id="txtPhone" placeholder="Số điện thoại">
                            <textarea required id="txtContent" placeholder="Lời nhắn"></textarea>
                            <input type="submit" class="site-btn" value="Gửi">
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d972.933463458489!2d108.10606392918086!3d12.730777799438387!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTLCsDQzJzUwLjgiTiAxMDjCsDA2JzIzLjgiRQ!5e0!3m2!1svi!2s!4v1625974254188!5m2!1svi!2s"
                            width="600" 
                            height="780" 
                            style="border:0;" 
                            allowfullscreen="" ></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->

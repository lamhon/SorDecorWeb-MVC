
@{
    Layout = null;
}
@model WebDecor.Models.RegisterModel

<!DOCTYPE html>


<HTMl>

<HEAD>
    <link rel="stylesheet" href="~/Assets/Client/css/login.css" type="text/css">
    <script src="https://kit.fontawesome.com/16bbaa6f54.js" crossorigin="anonymous"></script>
    <title>Register</title>
</HEAD>


<BODY>
    <div class="container" id="container">
        <div class="form-container sign-in-container">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "", new { @classs = "alert alert-danger" })
                <h1>Tạo tài khoản</h1>
                <div class="form-group">

                    @if (ViewBag.Success != null)
                    {
                        <div style="background-color:greenyellow">@ViewBag.Success</div>
                    }
                </div>
                <div class="social-container">
                    <a href="#" class="facebook-social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="google-social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="in-social"><i class="fab fa-linkedin-in"></i></a>
                </div>
                <span>hoặc sử dụng Email để đăng ký tài khoản</span>
                @Html.TextBoxFor(model => model.Name, new { @type = "text", @placeholder = "Tên" }) @ViewData["ErrorName"]
                @Html.TextBoxFor(model => model.Email, new { @type = "email", @placeholder = "Email" }) @ViewData["ErrorEmail"]
                @Html.TextBoxFor(model => model.Pass, new { @type = "password", @placeholder = "Mật khẩu" }) @ViewData["ErrorPass"]
                @Html.TextBoxFor(model => model.rePass, new { @type = "password", @placeholder = "Nhập lại mật khẩu" }) @ViewData["ErrorRePass"]
                <button type="submit">Đăng ký</button>
            }
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-right">
                    <h1>Welcome Back!</h1>
                    <p>Nếu bạn đã có tài khoản, hãy đăng nhập với thông tin tài khoản của bạn</p>
                    <button class="ghost" id="signUp">@Html.ActionLink("Đăng nhập", "Login", "User")</button>
                </div>
            </div>
        </div>
    </div>
</BODY>
</HTMl>
